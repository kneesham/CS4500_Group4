@* This component displays the game data of the user *@

@inject NavigationManager NavigationManager

<div class="container">
    <h1 class="display-1">Summary</h1>
    <p>
        Thank you for your help finding the animals!
    </p>
    <p>
        Here are your statistics!
    </p>
    <table class="table table-dark table-hover table-bordered">
        <tr>
            <th>Number of Wins</th>
            <td>@Wins</td>
        </tr>
        <tr>
            <th>Total Number of Games</th>
            <td>@TotalGames</td>
        </tr>
        <tr>
            <th>Number of Correct Unwinnable Declarations</th>
            <td>@CorrectUnwinnables</td>
        </tr>
        <tr>
            <th>Total Possible Number of Declarations</th>
            <td>@TotalUnWins</td>
        </tr>
    </table>
    <p>
        Here's some sick links so you can explore this topic more!
    </p>
    <button class="btn btn-md btn-primary" @onclick="@(() => NavigationManager.NavigateTo(NavigationManager.Uri, true))">Home</button>
    <button class="btn btn-md btn-primary" @onclick="()=>SummaryContinue.InvokeAsync(false)">Infinite</button>
</div>


@code {
    [Parameter]
    public EventCallback<bool> SummaryContinue { get; set; }
    [Parameter]
    public int Wins { get; set; }
    [Parameter]
    public int CorrectUnwinnables { get; set; }
    [Parameter]
    public int TotalGames { get; set; }
    [Parameter]
    public int TotalUnWins { get; set; }
}